<!-- views/add-product.ejs -->

<h1 class="mt-5 mb-4 text-light">Add New Product</h1>

<% if(errorMessage){ %>
    <div class="alert alert-danger" role="alert">
      <%= errorMessage %>
      </div>
<% } %>

<form action="/" method="post">
    <div class="mb-3">
        <label for="name" class="form-label text-light">Product Name</label>
        <input type="text" class="form-control" id="name" name="name">
    </div>
    <div class="mb-3">
        <label for="desc" class="form-label text-light">Product Description</label>
        <textarea class="form-control" id="desc" name="desc" rows="3"></textarea>
    </div>
    <div class="mb-3">
        <label for="price" class="form-label text-light">Price</label>
        <input type="number" class="form-control" id="price" name="price" step="0.01" >
    </div>
    <div class="mb-3">
        <label for="imageUrl" class="form-label text-light">Image URL</label>
        <input type="text" class="form-control" id="imageUrl" name="imageUrl">
    </div>
    <button type="submit" class="btn btn-primary">Add Product</button>
</form>